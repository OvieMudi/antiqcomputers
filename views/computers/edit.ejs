<% include ../partials/header%>
        <header class="container" style="text-align: center; margin: 20px auto;">
            <h1>Edit <%=computer.name%></h1> 
        </header>
       
        <main class="container" style="width: 30%; margin: 0 auto;">
            <form action="/computers/<%=computer._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="compName">Name of computer</label>
                    <input type="text" name="computer[name]" class="form-control" id="compName" value="<%=computer.name%>" required>
                </div>
                <div class="form-group">
                    <label for="compURL">Link to image</label>
                    <input type="text" name="computer[image]" class="form-control" id="compURL" value="<%=computer.image%>" required>
                </div>
                <div class="form-group">
                    <label for="compDesc">Edit description</label>
                <textarea name="computer[description]" class="form-control" id="compDesc" required><%= computer.description %></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit!</button>
            </form>
            <a href="/computers/">Go back</a>
        </main>

       
<% include ../partials/footer%>